

# Empêcher l'accès aux fichiers cachés (.env, .git)
<Files .*>
    <IfModule !mod_authz_core.c>
        Order deny,allow
        Deny from all
    </IfModule>
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
</Files>

# Redirection silencieuse vers le dossier public
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Ne pas rediriger si le fichier existe déjà (images, css, etc qui seraient à la racine)
    
    # Rediriger tout le reste vers le dossier public sans changer l'URL
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteRule ^(.*)$ public/$1 [L,QSA]
</IfModule>

